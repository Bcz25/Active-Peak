<!-- Display exercise cards based on routine selected-->
<!-- API calls by name when clicking on exercise card, return GIF and instructions-->
<div class="container mx-auto mt-8">
  <div class="bg-white rounded shadow p-6">
    <h2 class="text-2xl font-bold mb-2">Routine Template</h2>
    <div class="flex justify-between">
      <!-- Modal toggle -->
<button
        type="button"
        data-modal-target="name-modal" data-modal-toggle="name-modal"
        class="block text-white bg-red-600 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-gray-700 dark:focus:ring-red-800" id="save-routine-btn"
        style="text-decoration: none; width: 166.58px; height: 40px;"
      >
        Save Routine
      </button>

<!-- Name modal -->
<div id="name-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-lg font-semibold text-gray-900">
                    Enter Routine Name
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="name-modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
          
            <!-- Modal body -->
            <div class="p-4 md:p-5">
                <label for="name" class="text-gray-500 dark:text-gray-400 mb-2 block">Your desired Routine Template name:</label>
                <input type="text" placeholder="{{Routine.Routine_name}}" data-default-name="{{Routine.Routine_name}}" data-routine-id="{{Routine.id}}" id="routineSaveName" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-red-400 focus:border-red-600" required />
                <button
                type="click"
    class="inline-flex w-full mt-2 justify-center rounded-lg bg-red-600 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-gray-800 focus:outline-none focus:ring-4 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-gray-700 dark:focus:ring-red-800"
    id="save-routine"
  >
    Save
  </button>
            </div>
        </div>
    </div>
</div>
      <a
        href="/profile"
        class="block text-white bg-red-600 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-gray-700 dark:focus:ring-red-800"
        style="text-decoration: none; width: 166.58px; height: 40px;"
      >
        Go to Profile Page
      </a>
    </div>
    <div id="card-container exercise" class="grid grid-cols-2 gap-4 mt-4">
  {{#each exercises as |Exercise|}}
  <button class="get-Instructions" data-value="{{Exercise.Exercise_name}}">
    <div class="bg-gray-100 p-4 rounded shadow">
      <h3 id="Exercise_name" class="text-xl font-semibold exercise-name">{{Exercise.Exercise_name}}</h3>
      <p id="routine-exercises" class="exercise-reps">Recommended Volume: {{Exercise.reps}}</p>
    </div>
  </button>
  {{/each}}
</div>
    <!-- modal to display instructions for exercise -->
    <div class="relative hidden z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true" id="instruction-modal">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
     <!-- modal to display instructions for exercise -->
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
              <h3 class="text-base font-semibold leading-6 text-gray-900" id="exercise-name"></h3>
                <div class="mt-2">
                <img src='' alt="gif to demo selected exercise" class="text-sm text-gray-500" id='exercise-gif'></img>
              </div>
              <div class="mt-2">
                <p class="text-sm text-gray-500" id='exercise-instructions'>How to do it!</p>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <button type="button" id="close-gif-btn" class="inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto close-modal">Got It!</button>
        </div>
      </div>
    </div>
  </div>
</div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/routine.js"></script>
<script src="/js/fetchedb.js"></script>
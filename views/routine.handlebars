<!-- Display exercise cards based on routine selected-->
<!-- API calls by name when clicking on exercise card, return GIF and instructions-->
<div class="container mx-auto mt-8">
  <div class="bg-white rounded shadow p-6">
    <h2 class="text-2xl font-bold mb-2">Routine Templates</h2>
    <div class="flex justify-between">
      <a href="/profile"
        class="block text-white bg-red-600 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-gray-700 dark:focus:ring-red-800"
        style="text-decoration: none; width: 166.58px; height: 40px;">
        Go to Profile Page
      </a>
    </div>
    <div id="card-container" class="grid grid-cols-2 gap-4">
      <!-- Cards will be dynamically generated here -->
      {{#each exercises as |Exercise|}}
        <div class="bg-gray-100 p-4 rounded shadow">
          <h3 class="text-xl font-semibold">{{Excercise.Exercise_name}}</h3>
          <p>Sets: {{Excercise.sets}}</p>
          <p>Reps: {{Excercise.reps}}</p>
        </div>
      {{/each}}
    </div>
  </div>
</div>
<script src="/js/routine.js"></script>